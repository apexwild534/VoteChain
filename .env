# ============================
# VoteChain Environment Config
# ============================

ENV=development

# ----------------------------
# JWT Authentication
# ----------------------------
JWT_SECRET=supersecretchangeme123
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ----------------------------
# Admin credentials
# (The password here is in plain text only for development)
# In prod, store only the hash or fetch from a secrets vault.
# ----------------------------
ADMIN_PASSWORD=admin123

# ----------------------------
# Database Configuration
# SQLite in project directory
# ----------------------------
DATABASE_URL=sqlite:///./votechain.db

# ----------------------------
# Blockchain Configuration
# ----------------------------
CHAIN_FILE=./blockchain_data/chain.json
ENABLE_CHAIN_PERSISTENCE=true

# ----------------------------
# Logging
# ----------------------------
LOG_LEVEL=info
